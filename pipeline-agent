pipeline {
    agent any 
    environment{
        NAME= "ganesh"
        URL= "https://github.com/ganesh-redy/jenkins-stash-agent.git"
        DIR ="jenkins-stash-agent"
    }
    stages{
        stage ("mvn clean"){
            steps {
                sh """ 
                     mvn clean install
                      

                """
                stash includes: 'target/*.jar', name: 'myjar'
            }
        }
        stage {
            agent{
                label 'agent1'
            }
            steps {
                unstash 'myjar'

                sh """ 
                    git clone ${URL}
                    cp ${DIR}/Dockerfile .
                    

                        docker build -t java1 .
                """
            }
        }
    }
}
